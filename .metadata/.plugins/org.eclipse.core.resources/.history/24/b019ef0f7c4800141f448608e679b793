package com.ado.syphon.gui;

import com.ado.syphon.map.FarmZone;
import com.ado.syphon.map.Zone;
import com.ado.syphon.screens.GameScreen;
import com.badlogic.gdx.graphics.Color;
import com.badlogic.gdx.scenes.scene2d.ui.Label;
import com.badlogic.gdx.scenes.scene2d.ui.Label.LabelStyle;
import com.badlogic.gdx.scenes.scene2d.utils.Align;

public class ZoneInfoWindow extends BasicWindow {
	Label type;
	
	public ZoneInfoWindow(Gui gui) {
		super("Zone Info", 180, 100, gui);
	}
	public void showWindow(float x, float y, Zone z, GameScreen game){
		super.showWindow(x, y);
		type.setText(z.type.toString());
	}
	private void setupFarmInfo(FarmZone z, GameScreen game){
		title.setText("Farm Info");
		LabelStyle ls = new LabelStyle(game.getGui().font, Color.WHITE);
		Label l = new Label("Type: ", ls);
		root.top().left();
		root.add(l).width(root.getWidth()/2);
		type = new Label("", ls);
		type.setAlignment(Align.right);
		root.add(type).width(root.getWidth()/2);
	}
}
