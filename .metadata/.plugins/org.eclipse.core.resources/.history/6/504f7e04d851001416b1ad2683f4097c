package com.ado.syphon.entities.AiComponents;

import com.ado.syphon.entities.AiComponents.base.LeafTask;
import com.ado.syphon.entities.components.Position;
import com.ado.syphon.items.Item;
import com.ado.syphon.items.ItemData;
import com.ado.syphon.map.ItemLayer;
import com.ado.syphon.systems.AiSystem;

public class FindItem extends LeafTask {
	Class<? extends ItemData> type;

	public FindItem(AiSystem aiSys, Class<? extends ItemData> type) {
		super(aiSys);
		this.type = type;
	}

	@Override
	public void start() {

	}

	@Override
	public void end() {

	}

	@Override
	public void doTask() {
		Position pos = aiSys.getPm().get(aiSys.currentEntity);
		ItemLayer iLayer = aiSys.game.getMap().getCurrentLayerGroup().itemLayer;
		
		Item i = iLayer.getClosestEntity(pos.getX(), pos.getY(), 6, type);
		
	}

	@Override
	public boolean checkConditions() {
		return true;
	}
}
