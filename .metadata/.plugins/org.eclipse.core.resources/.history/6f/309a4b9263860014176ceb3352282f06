package com.ado.trader.buildings;

import com.badlogic.gdx.math.Vector3;
import com.badlogic.gdx.utils.Array;

public class WorkArea {
	int id, parentId;
	Vector3 vec;
	Array<Vector3> area;
	Integer entityId;
	Array<Integer> allWorkers;
	String aiWorkProfile;
	
	public WorkArea(int id,int parentId, Vector3 vec, String aiProfile){
		this.id = id;
		this.parentId = parentId;
		this.vec = vec;
		this.entityId = null;
		this.aiWorkProfile = aiProfile;
	}
	public WorkArea(int id, int parentId, Array<Vector3> area, String aiProfile){
		this.id = id;
		this.parentId = parentId;
		this.area = area;
		this.aiWorkProfile = aiProfile;
		this.allWorkers = new Array<Integer>();
	}
	public int getId(){
		return id;
	}
	public int getParentId(){
		return parentId;
	}
	public Integer getEntityId() {
		return entityId;
	}
	public void setEntityId(Integer entityId) {
		this.entityId = entityId;
	}
	public Vector3 getVec() {
		return vec;
	}
	public Array<Vector3> getArea() {
		return area;
	}
	public Array<Integer> getAllWorkers() {
		return allWorkers;
	}
	public String getAiWorkProfile() {
		return aiWorkProfile;
	}
	

}
